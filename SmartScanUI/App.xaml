<Application x:Class="SmartScanUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Use explicit pack URIs including assembly name to ensure resource lookup works at design and runtime -->
                <ResourceDictionary Source="pack://application:,,,/SmartScanUI;component/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/SmartScanUI;component/Styles/Controls.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/SmartScanUI;component/Styles/Layout.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
