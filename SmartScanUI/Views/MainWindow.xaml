<Window x:Class="SmartScanUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SmartScanUI.Views"
        xmlns:vm="clr-namespace:SmartScanUI.ViewModels"
        Title="Scanner Admin - ACME CORPORATION" Height="780" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Background="{StaticResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Header Bar -->
        <Border Grid.Row="0" Background="#1e1440" Padding="20">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Scanner Admin" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="ACME CORPORATION" FontSize="14" Foreground="White" Opacity="0.9" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="LimeGreen" Margin="0,0,8,0"/>
                    <TextBlock Text="All changes saved" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
                <views:SidebarView Loaded="SidebarView_Loaded"/>
            </Border>

            <!-- Content -->
            <DockPanel Grid.Column="1" Margin="18">
                <!-- Main panels -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <views:ScannerConfigView DataContext="{Binding ScannerConfig}"/>
                        <views:AdvancedSettingsView DataContext="{Binding AdvancedSettings}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border DockPanel.Dock="Bottom" Background="#EFEFEF" Padding="10" Margin="0,12,0,0">
                    <TextBlock Text="© ACME CORPORATION" Foreground="Gray"/>
                </Border>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
