<Window x:Class="SmartScanUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SmartScanUI.Views"
        xmlns:vm="clr-namespace:SmartScanUI.ViewModels"
        Title="Scanner Admin - ACME CORPORATION" Height="858" Width="1210"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Background="{StaticResource SurfaceGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Header Bar -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="20">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Scanner Admin" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="ANDHRA MAHILA SABHA" FontSize="14" Foreground="White" Opacity="0.9" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="LimeGreen" Margin="0,0,8,0"/>
                    <TextBlock Text="All changes saved" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="242"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SidebarGradient}">
                <views:SidebarView DataContext="{Binding Sidebar}"/>
            </Border>

            <!-- Content -->
            <DockPanel Grid.Column="1" Margin="18">
                <!-- Workspace Content Area -->
                <ContentControl DockPanel.Dock="Top" Content="{Binding CurrentWorkspace}" Margin="0,0,0,12"/>

                <!-- Footer -->
                <Border DockPanel.Dock="Bottom" Background="{StaticResource AccentGradient}" Padding="10" Margin="0,12,0,0">
                    <TextBlock Text="© ACME CORPORATION" Foreground="White" FontWeight="SemiBold"/>
                </Border>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
