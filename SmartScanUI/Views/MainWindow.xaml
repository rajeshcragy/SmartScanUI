<Window x:Class="ScannerAdminApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ScannerAdminApp.Views"
        xmlns:vm="clr-namespace:ScannerAdminApp.ViewModels"
        Title="Scanner Admin - ACME CORPORATION" Height="680" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Background="{StaticResource SurfaceBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <views:SidebarView/>
        </Border>

        <!-- Content -->
        <DockPanel Grid.Column="1" Margin="18">
            <!-- Header -->
            <DockPanel DockPanel.Dock="Top" LastChildFill="False" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Scanner Admin" Style="{StaticResource HeaderText}"/>
                    <TextBlock Text="ACME CORPORATION" FontSize="12" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="Green" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Text="All changes saved" Foreground="Green" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>

            <!-- Main panels -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <views:ScannerConfigView DataContext="{Binding ScannerConfig}"/>
                    <views:AdvancedSettingsView DataContext="{Binding AdvancedSettings}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border DockPanel.Dock="Bottom" Background="#EFEFEF" Padding="10" Margin="0,12,0,0">
                <TextBlock Text="© ACME CORPORATION" Foreground="Gray"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
