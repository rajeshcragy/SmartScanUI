<UserControl x:Class="ScannerAdminApp.Views.ScannerConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White" Padding="16" CornerRadius="6" Margin="0,0,0,12">
        <StackPanel>
            <TextBlock Text="Scanner Configuration" Style="{StaticResource HeaderText}"/>
            <TextBlock Text="Configure connected scanners and device settings" Foreground="Gray" Margin="0,0,0,12"/>

            <Grid Margin="0,6,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="PRIMARY SCANNER" FontWeight="SemiBold"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PrimaryScanner}" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="RESOLUTION DPI" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Resolutions}" SelectedItem="{Binding SelectedResolution}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="PAPER SIZE" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding PaperSizes}" SelectedItem="{Binding SelectedPaperSize}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="COLOR MODE" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding ColorModes}" SelectedItem="{Binding SelectedColorMode}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="DUPLEX MODE" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding DuplexModes}" SelectedItem="{Binding SelectedDuplexMode}"/>

                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                    <Button Content="TEST SCANNER" Command="{Binding TestScannerCommand}"/>
                    <Button Content="AUTO-DETECT" Command="{Binding AutoDetectCommand}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
