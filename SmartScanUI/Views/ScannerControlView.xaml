<UserControl x:Class="SmartScanUI.Views.ScannerControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Scanner Control Header -->
            <Border Background="White" Padding="16" CornerRadius="6" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Scanner Control Center" Style="{StaticResource HeaderText}"/>
                    <TextBlock Text="Manage and monitor your connected scanner devices" Foreground="Gray" Margin="0,0,0,12"/>
                </StackPanel>
            </Border>

            <!-- Scanner Devices List -->
            <Border Background="White" Padding="16" CornerRadius="6" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Connected Devices" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                    <!-- Device 1 -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ“¡ Scanner Device #1" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Model: HP ScanJet Pro" Foreground="Gray" Margin="0,4,0,0" FontSize="11"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status: " Foreground="Gray" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="âœ“ Online" Foreground="#28A745" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text=" | IP: 192.168.1.100" Foreground="Gray" FontSize="11" Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Control" Padding="10,6" Background="#007ACC" Foreground="White" Margin="0,0,6,0" FontSize="11"/>
                                <Button Content="Settings" Padding="10,6" Background="#6C757D" Foreground="White" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Device 2 -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ“¡ Scanner Device #2" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Model: Xerox VersaLink" Foreground="Gray" Margin="0,4,0,0" FontSize="11"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status: " Foreground="Gray" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="âœ“ Online" Foreground="#28A745" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text=" | IP: 192.168.1.101" Foreground="Gray" FontSize="11" Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Control" Padding="10,6" Background="#007ACC" Foreground="White" Margin="0,0,6,0" FontSize="11"/>
                                <Button Content="Settings" Padding="10,6" Background="#6C757D" Foreground="White" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Device 3 -->
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ“¡ Scanner Device #3" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Model: Canon imageRUNNER" Foreground="Gray" Margin="0,4,0,0" FontSize="11"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status: " Foreground="Gray" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="âœ“ Online" Foreground="#28A745" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text=" | IP: 192.168.1.102" Foreground="Gray" FontSize="11" Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Control" Padding="10,6" Background="#007ACC" Foreground="White" Margin="0,0,6,0" FontSize="11"/>
                                <Button Content="Settings" Padding="10,6" Background="#6C757D" Foreground="White" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Device 4 - Offline -->
                    <Border BorderBrush="#FFD700" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,8" Background="#FFFBF0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ“¡ Scanner Device #4" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Model: Fujitsu fi-7460" Foreground="Gray" Margin="0,4,0,0" FontSize="11"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status: " Foreground="Gray" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="âš  Offline" Foreground="#FF9800" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text=" | Last seen: 3 hours ago" Foreground="Gray" FontSize="11" Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Reconnect" Padding="10,6" Background="#FF9800" Foreground="White" Margin="0,0,6,0" FontSize="11"/>
                                <Button Content="Remove" Padding="10,6" Background="#DC3545" Foreground="White" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Scanner Operations -->
            <Border Background="White" Padding="16" CornerRadius="6" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Quick Operations" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Padding="12,10" Background="#007ACC" Foreground="White" Margin="0,0,6,0" FontSize="11" FontWeight="Bold">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ”„" Margin="0,0,8,0"/>
                                <TextBlock Text="Scan Test"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1" Padding="12,10" Background="#28A745" Foreground="White" Margin="6,0,6,0" FontSize="11" FontWeight="Bold">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“¥" Margin="0,0,8,0"/>
                                <TextBlock Text="Restart All"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" Padding="12,10" Background="#6C757D" Foreground="White" Margin="6,0,0,0" FontSize="11" FontWeight="Bold">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“Š" Margin="0,0,8,0"/>
                                <TextBlock Text="View Reports"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Device Status Summary -->
            <Border Background="White" Padding="16" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Status Summary" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#E8F5E9" Padding="12" CornerRadius="4" Margin="0,0,6,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="4" FontSize="28" FontWeight="Bold" Foreground="#28A745" HorizontalAlignment="Center"/>
                                <TextBlock Text="Online" Foreground="Gray" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFF3E0" Padding="12" CornerRadius="4" Margin="6,0,6,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="1" FontSize="28" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                <TextBlock Text="Offline" Foreground="Gray" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#E3F2FD" Padding="12" CornerRadius="4" Margin="6,0,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="5" FontSize="28" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total" Foreground="Gray" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
